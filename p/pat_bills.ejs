<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>My Bills</title>
    <link
      rel="stylesheet"
      href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css"
    />
    <link
      rel="stylesheet"
      href="https://site-assets.fontawesome.com/releases/v6.4.0/css/all.css"
    />
    <link rel="stylesheet" href="s/patient_dash.css" />
  </head>
  <body>
    <input type="checkbox" id="nav-toggle" />
    <div class="sidebar">
      <div class="sidebar-name">
        <h2><i class="fa-regular fa-capsules"></i><span>Evercare</span></h2>
      </div>
      <div class="sidebar-menu">
        <ul>
          <li>
            <a href="/p_dash"
              ><span class="las la-igloo"></span><span>Dashboard</span></a
            >
          </li>
          <li>
            <a href="/p_app"
              ><span class="las la-calendar-check"></span
              ><span>Appointment</span></a
            >
          </li>
          <li>
            <a href="/p_bill" class="active"
              ><span class="las la-file-invoice"></span><span>Bills</span></a
            >
          </li>
          <!-- <li>
            <a href="/p_query"
              ><span class="las la-question"></span><span>Queries</span></a
            >
          </li> -->
          <li>
            <a
              href="http://localhost:3000"
              style="padding-top: 400px; padding-left: 25px"
              ><span class="fa-light fa-right-from-bracket"></span
              ><span>Log out</span></a
            >
          </li>
        </ul>
      </div>
    </div>
    <div class="main-content">
      <header>
        <h2>
          <label for="nav-toggle">
            <span class="las la-bars"></span>
          </label>
          Dashboard
        </h2>
        <!-- <div class="search-wrapper">
          <span class="las la-search"></span>
          <input type="search" placeholder="Search here" />
        </div> -->
        <div class="user-wrapper">
          <i
            class="fa-duotone fa-user-doctor"
            style="width: 30px; height: 30px; padding-top: 5px; font-size: 20px"
          ></i>
          <div>
            <h5><%=name%></h5>
          </div>
        </div>
      </header>

      <main>
        <div class="recent-grid">
          <div class="customers" style="margin-top: -50px">
            <div class="cerd">
              <div class="card-header">
                <h3>Recent Bills</h3>

                <!-- <button onclick="location.href='phord.html';">See all <span class="las la-arrow-right"></span> </button> -->
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table width="100%">
                    <thead>
                      <tr>
                        <td>S.No</td>
                        <td>Bill id</td>
                        <td>Doctor name</td>
                        <td>Date</td>
                        <td></td>
                      </tr>
                    </thead>
                    <tbody>
                      <% for(var i=0;i < Object.keys(obj).length; i++ ) { %>
                      <tr>
                        <td><%= i+1 %></td>
                        <td><%= patient.id+1000 %></td>
                        <td><%= obj[i].doc_id %></td>
                        <td><%= obj[i].app_date %></td>
                        <td class="primary">
                          <form action="/p_pres" method="post">
                            <input
                              type="hidden"
                              name="patient"
                              value="<%=obj[i].pat_id%>"
                            />
                            <button>Prescription</button>
                          </form>
                        </td>
                      </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
