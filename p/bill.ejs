<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Hospital</title>
        <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
        <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.4.0/css/all.css"/>
        <link rel="stylesheet" href="../s/Bill.css">
    </head>
    <body>
        <div class="close-side-menu-1 close-side-menu"><i class="fas fa-times"></i></div>
       <div class="page" size="A4">
        <i class="fa-thin fa-heart-pulse heart" style="font-size: 250px;"></i>
          <div class="top-section">
            <div class="address">
                <div class="address-content">
                    <h2 style="font-family:Copperplate, 'Copperplate Gothic Light',fantasy;"><i class="fa-regular fa-capsules">&nbsp;</i>Evercare Hospital</h2>
                    <!-- <p>13, Mount Poonamalle High Rd Venkateshwara Nagar, Porur , Chennai - 600116.</p> -->
                    <p>18/45, Dubai kuruku sandhu, Anna University, Chennai - 600025</p>
                </div>
            </div>
            <div class="contact">
                <div class="contact-content">
                    <div class="email">Email:<span class="span">Evercare123@gmail.com</span></div>
                    <div class="number">Ph no:<span class="span">431-5980-3421</span></div>
                </div>
            </div>
          </div>
          
          <div class="details">
            <table Border="0">
                <tr>
                    <td>Bill no :</td>
                    <td><%= patient.id+1000 %></td>
                    <!-- <td align="right" style="padding-right: 20px;">Date: 31/5/23</td> -->
                </tr>
            
                <tr>
                    <td style="padding-top: 20px;">Mr/Mrs : </td>
                    <td style="padding-top: 20px;">&nbsp;&nbsp;<%= patient.name %></td>
                </tr>
                <tr>
                    <td style="padding-top: 10px;">Age:</td>
                    <td style="padding-top: 20px;">&nbsp;&nbsp;<%= patient.age %></td>
                </tr>
                <tr>
                    <td style="padding-top: 10px;">Gender:</td>
                    <td style="padding-top: 20px;">&nbsp;&nbsp;<%= patient.gender %></td>
                </tr>
            </table>
          </div>
          <div class="table">
            <table>
                <tr>
                    <th>No.</th>
                    <th>Medicene Name</th>
                    <th>Qty</th>
                    <th>Timing</th>
                    <!-- <th>A</th>
                    <th>N</th> -->
                    <th>Sub total</th>
                </tr>
                <% sum=0 %>
                <% for(var i=0;i < Object.keys(obj).length; i++ ) { %>
                   
                   <% sum+= obj[i].medi_qty*price[i].med_price %>
                    
                <tr>
                    <td><%= i+1 %></td>
                    <td><%= obj[i].med_name %></td>
                    <td><%= obj[i].medi_qty %></td>
                    <!-- <td>1</td>
                    <td></td> -->
                    <td><%= obj[i].timing %></td>
                    <td><%= obj[i].medi_qty*price[i].med_price %></td>
                </tr>
                <% } %>
                <tr>
                    <th colspan="4">Total:</td>
                    <td><%= sum %></td>
                </tr>
            </table>
          </div>
             <div class="sign">
                <i class="fa-light fa-barcode img-flu"></i><i class="fa-light fa-barcode img-flu"></i><i class="fa-light fa-barcode img-flu"></i><i class="fa-light fa-barcode img-flu"></i>
                <p style="padding-top: 10px;">Digital Signature</p>
             </div>

             <!-- <div class="pay">
                <span>Payment:&nbsp;&nbsp;<button class="inc">Pay Now</button></span>
             </div> -->

             <footer>
                <hr>
                <p>----Thank you for visiting----</p>
             </footer>

       </div>
       <script>
        document.querySelector(".close-side-menu-1").onclick = () => {
            window.location="<%= page %>";
              }
    </script>
    </body>
</html>