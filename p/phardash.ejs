<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Hospital</title>
    <link
      rel="stylesheet"
      href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css"
    />
    <link
      rel="stylesheet"
      href="https://site-assets.fontawesome.com/releases/v6.4.0/css/all.css"
    />
    <link rel="stylesheet" href="../s/phar.css" />
  </head>
  <body>
    <input type="checkbox" id="nav-toggle" />

    <div class="sidebar">
      <div class="sidebar-name">
        <h2><i class="fa-regular fa-capsules"></i><span>Welcare</span></h2>
      </div>
      <div class="sidebar-menu">
        <ul>
          <li>
            <a href="/phdash" class="active"
              ><span class="las la-igloo"></span><span>Dashboard</span></a
            >
          </li>
          <li>
            <a href="/phin"
              ><span class="las la-receipt"></span><span>Inventory</span></a
            >
          </li>
          <li>
            <a href="/phor"
              ><span class="las la-shopping-bag"></span><span>Orders</span></a
            >
          </li>
          <li>
            <a
              href="http://localhost:3000"
              style="padding-top: 400px; padding-left: 20px"
              ><span class="fa-light fa-right-from-bracket"></span
              ><span>Log out</span></a
            >
          </li>
        </ul>
      </div>
    </div>

    <div class="main-content">
      <header>
        <h2>
          <label for="nav-toggle">
            <span class="las la-bars"></span>
          </label>
          Dashboard
        </h2>
        <!-- <div class="search-wrapper">
          <span class="las la-search"></span>
          <input type="search" placeholder="Search here" />
        </div> -->
        <div class="user-wrapper">
          <i
            class="fa-duotone fa-user-vneck"
            style="width: 30px; height: 30px; padding-top: 5px"
          ></i>
          <!-- <img src="" width="30px" height="30px" alt=""> -->
          <div>
            <h5><%=name%></h5>
          </div>
        </div>
      </header>

      <main>
        <div class="cards">
          <div class="card">
            <div>
              <h1>54</h1>
              <span>Medicene</span>
            </div>
            <div>
              <span class="las la-biohazard"></span>
            </div>
          </div>
          <div class="card">
            <div>
              <h1>79</h1>
              <span>Quantity</span>
            </div>
            <div>
              <span class="las la-shopping-cart"></span>
            </div>
          </div>
          <div class="card">
            <div>
              <h1>90</h1>
              <span>Pending</span>
            </div>
            <div>
              <span class="las la-exclamation-circle"></span>
            </div>
          </div>
        </div>
        <div class="recent-grid">
          <div class="customers">
            <div class="cerd">
              <div class="card-header">
                <h3>Recent Patient</h3>

                <button onclick="location.href='/phor';">
                  See all <span class="las la-arrow-right"></span>
                </button>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table width="100%">
                    <thead>
                      <tr>
                        <td>Patient id</td>
                        <td>Patient Name</td>
                        <td>Doctor Name</td>
                        <!-- <td>Medicene Suggested</td> -->
                        <!-- <td>Status</td> -->
                        <td></td>
                      </tr>
                    </thead>
                    <tbody>
                      <% for(var i=0;i < Object.keys(obj).length; i++ ) { %>
                      <tr>
                        <td><%= obj[i].pat_id %></td>
                        <td><%= inf[i].name %></td>
                        <td><%= obj[i].doc_id %></td>
                        <!-- <td><%= obj[i].med_name %></td> -->
                        <td class="primary">
                          <form action="/pres" method="post">
                            <input
                              type="hidden"
                              name="patient"
                              value="<%=obj[i].pat_id%>"
                            />
                            <button
                              style="
                                background-color: #dd2f6e;
                                color: #fff;
                                padding: 2px 5px 2px 5px;
                                border-radius: 10px;
                                border: 1px solid #dd2f6e;
                              "
                            >
                              Prescription
                            </button>
                          </form>
                        </td>
                      </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
