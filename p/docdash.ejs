<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Hospital</title>
    <link
      rel="stylesheet"
      href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css"
    />
    <link
      rel="stylesheet"
      href="https://site-assets.fontawesome.com/releases/v6.4.0/css/all.css"
    />
    <link rel="stylesheet" href="../s/phar.css" />
  </head>
  <body>
    <input type="checkbox" id="nav-toggle" />
    <div class="sidebar">
      <div class="sidebar-name">
        <h2>
          <i class="fa-regular fa-capsules" style="font-size: 30px"></i
          ><span>Welcare</span>
        </h2>
      </div>
      <div class="sidebar-menu">
        <ul>
          <li>
            <a href="/docdash" class="active"
              ><span class="fa-regular fa-igloo"></span
              ><span>Dashboard</span></a
            >
          </li>
          <li>
            <a href="/docpat"
              ><span
                class="fa-solid fa-users-medical"
                style="margin-left: -5px"
              ></span
              ><span>Patients</span></a
            >
          </li>
          <li>
            <!-- <a href="/docmed"
              ><span
                class="fa-solid fa-folder-medical"
                style="margin-left: -2px"
              ></span
              ><span>Medicene</span></a
            > -->
          </li>
          <li>
            <a href="http://localhost:3000" style="padding-top: 400px; padding-left: 25px"
              ><span class="fa-light fa-right-from-bracket"></span
              ><span>Log out</span></a
            >
          </li>
        </ul>
      </div>
    </div>

    <div class="main-content">
      <header>
        <h2>
          <label for="nav-toggle">
            <span class="las la-bars"></span>
          </label>
          Dashboard
        </h2>
        <!-- <div class="search-wrapper">
          <span class="las la-search"></span>
          <input type="search" placeholder="Search here" />
        </div> -->
        <div class="user-wrapper">
          <i
            class="fa-duotone fa-user-doctor"
            style="width: 30px; height: 30px; padding-top: 5px; font-size: 20px"
          ></i>
          <!-- <img src="" width="30px" height="30px" alt=""> -->
          <div>
            <h5><%=name%></h5>
          </div>
        </div>
      </header>
      <main>
        <div class="cards">
          <div class="card">
            <div>
              <h1>54</h1>
              <span>Total Patients</span>
            </div>
            <div>
              <i class="fa-solid fa-users-medical"></i>
            </div>
          </div>
          <div class="card">
            <div>
              <h1>79</h1>
              <span>Appointment Today</span>
            </div>
            <div>
              <i class="fa-regular fa-calendar-check"></i>
            </div>
          </div>
          <div class="card">
            <div>
              <h1>90</h1>
              <span>Completed</span>
            </div>
            <div>
              <!-- <span class="las la-exclamation-circle"></span> -->
              <span class="las la-list-alt"></span>
            </div>
          </div>
        </div>
        <div class="racent-grid">
          <div class="customers">
            <div class="cerd">
              <div class="card-dheader">
                <h3>Patients</h3>
                <!-- <button>Today</button>
                <button style="margin-left: -270px">Upcoming</button> -->
                <!-- <button onclick="location.href='docpat.html';">
                  See all <span class="las la-arrow-right"></span>
                </button> -->
              </div>
              <!-- <div class="card-body">>See all <span class="las la-arrow-right"></span> </button> 
                            </div> -->
              <div class="card-body">
                <div class="table-responsive">
                  <table width="100%">
                    <thead>
                      <tr>
                        <td>Patient Ph.no</td>
                        <td>Patient name</td>
                        <td>Appointment Date</td>
                        <td>Appointment Time</td>
                      </tr>
                    </thead>
                    <tbody>
                      <% for(var i=0;i < Object.keys(obj).length; i++ ) { %>
                      <tr>
                        <td><%= obj[i].pat_id %></td>
                        <td><%= inf[i].name %></td>
                        <td><%= obj[i].app_date %></td>
                        <td><%= obj[i].app_time %></td>
                      </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
