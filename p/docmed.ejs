<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Hospital</title>
    <link
      rel="stylesheet"
      href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css"
    />
    <link
      rel="stylesheet"
      href="https://site-assets.fontawesome.com/releases/v6.4.0/css/all.css"
    />
    <link rel="stylesheet" href="../s/phar.css" />
  </head>
  <body>
    <input type="checkbox" id="nav-toggle" checked disabled="true" />
    <div class="sidebar">
      <div class="sidebar-name">
        <h2>
          <i class="fa-regular fa-capsules" style="font-size: 30px"></i
          ><span>Welcare</span>
        </h2>
      </div>
      <div class="sidebar-menu">
        <ul>
          <li title="DASHBOARD">
            <a href="/docdash"
              ><span class="fa-regular fa-igloo"></span
              ><span>Dashboard</span></a
            >
          </li>
          <li title="PATIENTS">
            <a href="/docpat"
              ><span
                class="fa-solid fa-users-medical"
                style="margin-left: -5px"
              ></span
              ><span>Patients</span></a
            >
          </li>
          <li title="MEDICINE">
            <a href="/docmed" class="active"
              ><span
                class="fa-solid fa-folder-medical"
                style="margin-left: -2px"
              ></span
              ><span>Medicene</span></a
            >
          </li>
          <li>
            <a href="http://localhost:3000" style="padding-top: 300px; padding-left: 25px"
              ><span class="fa-light fa-right-from-bracket"></span
              ><span>Log out</span></a
            >
          </li>
        </ul>
      </div>
    </div>

    <div class="main-content">
      <header>
        <h2>
          <label for="nav-toggle">
            <span class="las la-bars"></span>
          </label>
          Medicene
        </h2>
        <!-- <div class="search-wrapper">
          <span class="las la-search"></span>
          <input type="search" placeholder="Search here" />
        </div> -->
        <div class="user-wrapper">
          <i
            class="fa-duotone fa-user-doctor"
            style="width: 30px; height: 30px; padding-top: 5px; font-size: 20px"
          ></i>
          <!-- <img src="" width="30px" height="30px" alt=""> -->
          <div>
            <h5><%=name%></h5>
          </div>
        </div>
      </header>
      <main>
        <div class="racent-grid" style="width: max-content">
          <div class="customers">
            <div class="cerd">
              <div class="card-header" style="width: 80% !important">
                <h3>Medicene Available</h3>

                <!-- <button class="org-js">Add Medicene <span class="las la-plus"></span> </button> -->
              </div>
              <div class="card-body">
                <div
                  class="table-responsive"
                  style="overflow-x: hidden !important"
                >
                  <table width="100%" style="margin-right: 500px">
                    <thead>
                      <tr>
                        <td>Mediciene Name</td>
                        <td>Timing</td>
                        <td>Stock Availability</td>
                        <td>Quantity</td>
                        <td></td>
                      </tr>
                    </thead>
                    <tbody>
                      <% for(var i=0;i < Object.keys(obj).length; i++ ) { %>
                      <tr>
                        <td><%= obj[i].med_name %></td>
                        <form action="/cart" method="post">
                        <td>
                          <input type="checkbox" name="tim" value="M" />
                          <label>Morning</label> <br />
                          <input type="checkbox" name="tim" value="A" />
                          <label>Afternoon</label> <br />
                          <input type="checkbox" name="tim" value="N" />
                          <label>Night</label> <br />
                        </td>
                        <td><%= obj[i].med_qty %></td>
                        <td><input type="number" placeholder="" name="med_qty" style="border: 2px solid #000;width:2.5rem;height: 2.5rem; padding-left: 10px;"/></td>
                        <td>
                            <input
                              type="hidden"
                              name="patient"
                              value="<%=patient%>"
                            />
                            <input type="hidden" value="<%=obj[i].med_id%>" name="med_id">
                            <input type="hidden" value="<%=obj[i].med_name%>" name="med_name">
                            <button
                              style="
                                background-color: #dd2f6e;
                                border-radius: 100px;
                                padding: 3px 10px 3px 10px;
                                margin-top: 20px;
                                border: 1px solid white;
                              "
                              onmouseover="this.style.color='#fff'"
                              onmouseout="this.style.color='#000'"
                              class="org-js"
                            >
                              Add
                            </button>
                          </form>
                        </td>
                      </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!----side menu---->
        <div
          class="side-menu1 organize"
          style="
            display: block;
            visibility: visible;
            position: absolute;
            top: 0;
            right: 0;
          "
        >
          <input type="hidden" id="pop" />
          <div class="close-side-menu-1 close-side-menu">
            <!-- <i class="fas fa-times"></i> -->
          </div>
          <p style="font-size: 30px; font-weight: 600; color: #fff">
            Prescription
          </p>
          <br /><br />
          <hr style="margin: -40px 0 20px 0; display: block;">
          <table>
            <tr>
              <th>Med_name</th>
              <th>Qty</th>
              <!-- <th></th> -->
            </tr>
            <% for(var i=0;i < Object.keys(med).length; i++ ) { %>
            <tr>
                <td><%= med[i].med_name %></td>
                <td><%= med[i].medi_qty %></td>  
                <form action="/bill_bill" method="post">
                  <input type="hidden" name="med_id" value="<%= med[i].med_id %>">
                  <input type="hidden" name="id" value="<%= med[i].pat_id %>">
              <!-- <td><button type="submit"><i class="las la-trash abou"></i></button></td> -->
                </form>
            </tr>
            <% } %>
          </table>
          <!-- <button type="submit" class="o-btn-sub">Create</button> -->
        </div>
      </main>
    </div>
  </body>
  <script>
    document.querySelector(".org-js").onclick = () => {
      document.querySelector(".organize").style.visibility = "visible";
    };
    document.querySelector(".close-side-menu-1").onclick = () => {
      document.querySelector(".organize").style.visibility = "hidden";
    };
  </script>
</html>
