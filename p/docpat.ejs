<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Hospital</title>
    <link
      rel="stylesheet"
      href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css"
    />
    <link
      rel="stylesheet"
      href="https://site-assets.fontawesome.com/releases/v6.4.0/css/all.css"
    />
    <link rel="stylesheet" href="../s/phar.css" />
  </head>
  <body>
    <input type="checkbox" id="nav-toggle" />
    <div class="sidebar">
      <div class="sidebar-name">
        <h2>
          <i class="fa-regular fa-capsules" style="font-size: 30px"></i
          ><span>Welcare</span>
        </h2>
      </div>
      <div class="sidebar-menu">
        <ul>
          <li>
            <a href="/docdash"
              ><span class="fa-regular fa-igloo"></span
              ><span>Dashboard</span></a
            >
          </li>
          <li>
            <a href="/docpat" class="active"
              ><span
                class="fa-solid fa-users-medical"
                style="margin-left: -5px"
              ></span
              ><span>Patients</span></a
            >
          </li>
          <li>
            <!-- <a href="/docmed"
              ><span -->
            <!-- class="fa-solid fa-folder-medical"
                style="margin-left: -2px"
              ></span
              ><span>Medicene</span></a
            > -->
          </li>
          <li>
            <a
              href="http://localhost:3000"
              style="padding-top: 400px; padding-left: 25px"
              ><span class="fa-light fa-right-from-bracket"></span
              ><span>Log out</span></a
            >
          </li>
        </ul>
      </div>
    </div>

    <div class="main-content">
      <header>
        <h2>
          <label for="nav-toggle">
            <span class="las la-bars"></span>
          </label>
          Patients
        </h2>
        <!-- <div class="search-wrapper">
          <span class="las la-search"></span>
          <input type="search" placeholder="Search here" />
        </div> -->
        <div class="user-wrapper">
          <i
            class="fa-duotone fa-user-doctor"
            style="width: 30px; height: 30px; padding-top: 5px; font-size: 20px"
          ></i>
          <!-- <img src="" width="30px" height="30px" alt=""> -->
          <div>
            <h5><%=name%></h5>
          </div>
        </div>
      </header>
      <main>
        <div class="racent-grid">
          <div class="customers">
            <div class="cerd">
              <div class="card-dheader">
                <h3>Patients</h3>
                <!-- <button style="margin-left: 300px">Today</button
                >&nbsp;&nbsp;&nbsp;&nbsp;
                <button style="margin-right: 570px">Upcoming</button> -->
                <!-- <button>See all <span class="las la-arrow-right"></span> </button>  -->
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table width="100%">
                    <thead>
                      <tr>
                        <td>Patient id</td>
                        <td>Patient name</td>
                        <td>Appointment Date</td>
                        <td>Appointment Time</td>
                        <td></td>
                      </tr>
                    </thead>
                    <tbody>
                      <% for(var i=0;i < Object.keys(obj).length; i++ ) { %>
                      <tr>
                        <td><%= obj[i].pat_id %></td>
                        <td><%= inf[i].name %></td>
                        <td><%= obj[i].app_date %></td>
                        <td><%= obj[i].app_time %></td>
                        <td>
                          <form action="/docmed" method="post">
                            <input
                              type="hidden"
                              name="patient"
                              value="<%= obj[i].pat_id %>"
                            />
                            <button
                              style="
                                background-color: #dd2f6e;
                                color: #fff;
                                padding: 2px 5px 2px 5px;
                                border-radius: 10px;
                                border: 1px solid #dd2f6e;
                              "
                            >
                              Prescription
                            </button>
                          </form>
                        </td>
                      </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
