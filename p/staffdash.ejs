<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>My Dashboard</title>
    <link
      rel="stylesheet"
      href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css"
    />
    <link
      rel="stylesheet"
      href="https://site-assets.fontawesome.com/releases/v6.4.0/css/all.css"
    />
    <link rel="stylesheet" href="s/staff_dash.css" />
  </head>
  <body>
    <input type="checkbox" id="nav-toggle" />
    <div class="sidebar">
      <div class="sidebar-name">
        <h2><i class="fa-regular fa-capsules"></i><span>Evercare</span></h2>
      </div>
      <div class="sidebar-menu">
        <ul>
          <li>
            <a href="/staffdash" class="active"
              ><span class="las la-igloo"></span><span>Dashboard</span></a
            >
          </li>
          <li>
            <a href="/appointmentlist"
              ><span class="las la-calendar-check"></span
              ><span>Appointment</span></a
            >
          </li>
          <!-- <li>
            <a href="/doc_avail"
              ><span class="fa-regular fa-user-doctor"></span
              ><span>Doctor Availablility</span></a
            > -->
          </li>
          <li>
            <a
              href="http://localhost:3000"
              style="margin-top: 400px; padding-left: 20px"
              ><span class="fa-light fa-right-from-bracket"></span
              ><span>Log out</span></a
            >
          </li>
        </ul>
      </div>
    </div>

    <div class="main-content">
      <header>
        <h2>
          <label for="nav-toggle">
            <span class="las la-bars"></span>
          </label>
          Dashboard
        </h2>
        <!-- <div class="search-wrapper">
          <span class="las la-search"></span>
          <input type="search" placeholder="Search here" />
        </div> -->
        <div class="user-wrapper">
          <i
            class="fa-duotone fa-user-vneck"
            style="width: 30px; height: 30px; padding-top: 5px"
          ></i>
          <div>
            <h5><%=name%></h5>
          </div>
        </div>
      </header>

      <main>
        <div class="cards">
          <div class="card">
            <div>
              <h1>54</h1>
              <span>Total</span>
            </div>
            <div>
              <span class="las la-biohazard"></span>
            </div>
          </div>
          <div class="card">
            <div>
              <h1>30</h1>
              <span>Completed</span>
            </div>
            <div>
              <span class="las la-list-alt"></span>
            </div>
          </div>
          <div class="card">
            <div>
              <h1>14</h1>
              <span>Pending</span>
            </div>
            <div>
              <span class="las la-exclamation-circle"></span>
            </div>
          </div>
        </div>
        <div class="recent-grid">
          <div class="customers">
            <div class="cerd">
              <div class="card-header">
                <h3>Recent Appointments</h3>

                <!-- <button onclick="location.href='phord.html';">
                  See all <span class="las la-arrow-right"></span>
                </button> -->
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table width="100%">
                    <thead>
                      <tr>
                        <td>Patient id</td>
                        <td>Appointment date</td>
                        <td>Appointment time</td>
                        <td>Specialist</td>
                        <td></td>
                      </tr>
                    </thead>
                    <tbody>
                      <% for(var i=0;i < Object.keys(obj).length; i++ ) { %>
                      <tr>
                        <td><%= obj[i].pat_id %></td>
                        <td><%= obj[i].app_date %></td>
                        <td><%= obj[i].app_time %></td>
                        <td><%= obj[i].specialist %></td>
                      </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
