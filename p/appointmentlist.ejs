<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>My Dashboard</title>
    <link
      rel="stylesheet"
      href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css"
    />
    <link
      rel="stylesheet"
      href="https://site-assets.fontawesome.com/releases/v6.4.0/css/all.css"
    />
    <link rel="stylesheet" href="s/staff_dash.css" />
  </head>
  <body>
    <input type="checkbox" id="nav-toggle" />
    <div class="sidebar">
      <div class="sidebar-name">
        <h2><i class="fa-regular fa-capsules"></i><span>Evercare</span></h2>
      </div>
      <div class="sidebar-menu">
        <ul>
          <li>
            <a href="/staffdash"
              ><span class="las la-igloo"></span><span>Dashboard</span></a
            >
          </li>
          <li>
            <a href="/appointmentlist" class="active"
              ><span class="las la-calendar-check"></span
              ><span>Appointment</span></a
            >
          </li>
          <!-- <li>
            <a href="/doc_avail"
              ><span class="fa-regular fa-user-doctor"></span
              ><span>Doctor Availablility</span></a
            >
          </li> -->
          <li>
            <a
              href="http://localhost:3000"
              style="padding-top: 400px; padding-left: 20px"
              ><span class="fa-light fa-right-from-bracket"></span
              ><span>Log out</span></a
            >
          </li>
        </ul>
      </div>
    </div>

    <div class="main-content">
      <header>
        <h2>
          <label for="nav-toggle">
            <span class="las la-bars"></span>
          </label>
          <!-- Appointments -->
        </h2>
        <!-- <div class="search-wrapper">
          <span class="las la-search"></span>
          <input type="search" placeholder="Search here" />
        </div> -->
        <div class="user-wrapper">
          <i
            class="fa-duotone fa-user-vneck"
            style="width: 30px; height: 30px; padding-top: 5px"
          ></i>
          <div>
            <h5><%=name%></h5>
          </div>
        </div>
      </header>

      <main>
        <div class="customers">
          <div class="cerd">
            <div class="card-header">
              <h3>Appointments</h3>
              <!-- <button onclick="location.href='phord.html';">
                  See all <span class="las la-arrow-right"></span>
                </button> -->
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table width="100%">
                  <thead>
                    <tr>
                      <td>Patient id</td>
                      <td>Date</td>
                      <td>Time</td>
                      <td>Specialist</td>
                      <td>Doctor</td>
                      <td>Update</td>
                      <td>Assigned Doctor</td>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(var i=0;i < Object.keys(obj).length; i++ ) { %>
                    <tr>
                      <td><%= obj[i].pat_id %></td>
                      <td><%= obj[i].app_date %></td>
                      <td><%= obj[i].app_time %></td>
                      <td><%= obj[i].specialist %></td>
                      <form action="/updateapp" method="post">
                        <td>
                          <select name="doc_spl" id="">
                            <% for(var j=0;j < Object.keys(obj1).length; j++ )
                            {%> <% if(obj1[j].specialization ==
                            obj[i].specialist) {%>
                            <option value="<%= obj1[j].name %>">
                              <%= obj1[j].name %>
                            </option>
                            <% } %> <% } %>
                            <input
                              type="hidden"
                              name="pat"
                              value="<%=obj[i].pat_id%>"
                            />
                            <input
                              type="hidden"
                              name="timing"
                              value="<%=obj[i].app_time%>"
                            />
                          </select>
                        </td>
                        <td>
                          <button>Assign</button>
                        </td>
                      </form>
                      <td><span><%= obj[i].doc_id %></span></td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
